bozec.org matthieu.bozec.org www.bozec.org matthieubozec.fr {
    redir www.matthieubozec.fr{uri} permanent
}

www.matthieubozec.fr {
  root * /home/matthieu/www/current/public

  encode zstd gzip
  file_server

  @static {
      path *.css *.js *.jpg *.jpeg *.png *.gif *.ico *.svg *.webp *.woff *.woff2 *.ttf
  }
  header @static Cache-Control "public, max-age=31536000, immutable"

  php_fastcgi unix//run/php/php8.4-fpm.sock {
    try_files {path} index.php

    resolve_root_symlink
  }

  @phpFile {
        path *.php*
  }

  error @phpFile "Not found" 404
}
