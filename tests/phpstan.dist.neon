includes:
    - %rootDir%/../phpstan-deprecation-rules/rules.neon
    - %rootDir%/../phpstan-phpunit/extension.neon
    - %rootDir%/../phpstan-phpunit/rules.neon
    - %rootDir%/../phpstan-symfony/extension.neon
    - %rootDir%/../phpstan-symfony/rules.neon

parameters:
    level: max
    inferPrivatePropertyTypeFromConstructor: true
    treatPhpDocTypesAsCertain: false
    paths:
        - %rootDir%/../../../tests/
    tmpDir: %rootDir%/../../../var/cache/phpstan
    excludePaths:
        - %rootDir%/../../../tests/bootstrap.php
    symfony:
        containerXmlPath: %rootDir%/../../../var/cache/dev/App_KernelDevDebugContainer.xml
    scanDirectories:
        - %rootDir%/../../../var/cache/dev/Symfony/Config
    scanFiles:
        - %rootDir%/../../../vendor/symfony/dependency-injection/Loader/Configurator/ContainerConfigurator.php
