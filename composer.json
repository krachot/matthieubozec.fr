{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-redis": "*",
        "doctrine/dbal": "^4.4.1",
        "doctrine/doctrine-bundle": "^3.1",
        "jaybizzle/crawler-detect": "^1.3.6",
        "league/flysystem-bundle": "^3.6",
        "liip/imagine-bundle": "^2.16",
        "simonhamp/the-og": "^0.6.0",
        "symfony/apache-pack": ">=1.0.1",
        "symfony/brevo-mailer": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2.10.0",
        "symfony/form": "7.4.*",
        "symfony/framework-bundle": "7.4.*",
        "symfony/http-client": "7.4.*",
        "symfony/mailer": "7.4.*",
        "symfony/monolog-bundle": "^3.0|^4.0",
        "symfony/notifier": "7.4.*",
        "symfony/rate-limiter": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/security-csrf": "7.4.*",
        "symfony/stimulus-bundle": "^2.31",
        "symfony/twig-bundle": "7.4.*",
        "symfony/ux-icons": "^2.31",
        "symfony/ux-turbo": "^2.31",
        "symfony/ux-twig-component": "^2.31",
        "symfony/validator": "7.4.*",
        "symfony/web-link": "7.4.*",
        "symfony/webpack-encore-bundle": "^2.4",
        "symfony/yaml": "7.4.*",
        "tales-from-a-dev/twig-tailwind-extra": "^0.5.0",
        "twig/cssinliner-extra": "^3.22",
        "twig/extra-bundle": "^3.22.1",
        "twig/html-extra": "^3.22.1",
        "twig/inky-extra": "^3.22",
        "twig/twig": "^2.12|^3.22.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "pre-commit":  [
            "@codestyle",
            "@phpstan",
            "@linting",
            "@tests-unit"
        ],
        "code-check":  [
            "@pre-commit",
            "@tests-integration"
        ],
        "linting": [
            "bin/console lint:container",
            "bin/console lint:yaml config --parse-tags",
            "bin/console lint:twig templates --show-deprecations"
        ],
        "tests": "bin/phpunit",
        "tests-unit": "bin/phpunit --testsuite unit",
        "tests-integration": "bin/phpunit --testsuite integration",
        "tests-functional": "bin/phpunit --testsuite functional",
        "phpstan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpstan-src": [
            "vendor/bin/phpstan analyse --memory-limit 1G -c phpstan.dist.neon"
        ],
        "phpstan-tests": [
            "vendor/bin/phpstan analyse --memory-limit 1G -c tests/phpstan.dist.neon"
        ],
        "codestyle": "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=none",
        "codestyle-fix": "vendor/bin/php-cs-fixer fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.4.*",
            "docker": true
        }
    },
    "require-dev": {
        "deployer/deployer": "^7.5.12",
        "friendsofphp/php-cs-fixer": "^3.91.2",
        "phpstan/phpstan": "^2.1.32",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.8",
        "phpstan/phpstan-symfony": "^2.0.9",
        "phpunit/phpunit": "^12.5.0",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/debug-bundle": "7.4.*",
        "symfony/stopwatch": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*",
        "zenstruck/browser": "^1.9.1",
        "zenstruck/mailer-test": "^1.4.2"
    }
}
