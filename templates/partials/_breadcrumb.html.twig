{% if page|default(null) and page.key != 'index' %}
  <div class="wrapper py-4 w-full">
    <nav aria-label="Fil d'arianne">
      <ol class="flex flex-wrap items-center gap-1 text-sm text-gray-600">
        {% for node in breadcrumb(page.key()) %}
          <li class="flex items-center gap-1">
            {% if not loop.first %}
              <twig:ux:icon name="lucide:chevron-right" class="size-4 text-gray-400" />
            {% endif %}

            {% if not loop.last %}
              <a href="{{ node.url }}" class="hover:text-gray-900 transition-colors">{{ node.title }}</a>
            {% else %}
              <span class="text-gray-900 font-medium" aria-current="page">{{ node.title }}</span>
            {% endif %}
          </li>
        {% endfor %}
      </ol>
    </nav>
  </div>
{% endif %}
