{% extends "layout/default.html.twig" %}

{% block title %}Page non trouvée | Matthieu Bozec{% endblock %}
{% block meta_description '' %}
{% block meta_canonical '' %}

{% block og_image absolute_url(asset('build/images/og/index.jpg')) %}

{% block content %}
  <div class="wrapper py-16">
    <section class="flex flex-col items-center justify-center min-h-[40vh] text-center px-6">
      <div class="flex flex-col items-center space-y-6">
        <div class="text-[8rem] font-extrabold text-headline leading-none">404</div>
        <twig:Heading level="1" size="lg">Oups ! Cette page est introuvable.</twig:Heading>
        <p class="text-headline max-w-xl">
          Il semble que la page que vous cherchez n'existe pas ou ait été déplacée.
        </p>
        <div class="flex gap-3 mt-4">
          <twig:Button as="a" href="{{ page_url('index') }}" variant="highlight" size="lg">
            Retour à l'accueil du site
            <twig:ux:icon name="lucide:chevron-right" class="size-6" />
          </twig:Button>
        </div>
      </div>
    </section>
  </div>
{% endblock %}
