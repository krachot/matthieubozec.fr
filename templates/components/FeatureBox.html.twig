{% props as = 'p', title = '', text = '' %}

<{{ as }} class="{{ attributes.defaults({'class': 'bg-headline text-white [&>strong:first-child]:text-highlight border-2 border-black rounded-md p-6'}).render('class')|tailwind_merge }}" {{ attributes }}>
  <strong>{{ title }}</strong><br>
  {{ text|raw }}
</{{ as }}>
